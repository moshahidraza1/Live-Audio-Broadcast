{
  "name": "live-audio-broadcast",
  "version": "0.1.0",
  "description": "Live Audio Broadcast backend (Fastify, PostgreSQL/Drizzle, Redis/BullMQ, JWT auth)",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "NODE_ENV=development node --watch ./src/server.js",
    "start": "NODE_ENV=production node ./src/server.js",
    "worker": "NODE_ENV=production node ./src/worker.js",
    "scheduler": "NODE_ENV=production node ./src/scheduler.js",
    "seed": "NODE_ENV=production node ./src/seed.js",
    "migrate": "NODE_ENV=production node ./src/db/migrate.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check": "npm run lint"
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "drizzle-kit": {
      "@esbuild-kit/esm-loader": "npm:tsx@latest"
    },
    "esbuild": "^0.25.0"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "apns2": "^12.2.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.7.11",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.0",
    "fastify-plugin": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "google-auth-library": "^9.12.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.0",
    "livekit-server-sdk": "^2.15.0",
    "pg": "^8.11.3",
    "pino": "^9.3.1",
    "pino-pretty": "^11.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4"
  }
}
